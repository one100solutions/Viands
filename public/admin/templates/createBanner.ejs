<h1>Create Banner</h1>

<span>{{CreateBanner.text}}</span>

<form class="form-horizontal" method="post" enctype="multipart/form-data" ng-submit="CreateBanner.submit()">
	<div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" ng-model="CreateBanner.banner.name" id="name" placeholder="Name of banner">
  </div>

  <div class="form-group">
    <label for="name">Url</label>
    <input type="text" class="form-control" ng-model="CreateBanner.banner.url" id="name" placeholder="url for the banner">
  </div>

  <div class="form-group">
    <label for="exampleInputFile">Upload the banner image</label>
    <input type="file" ngf-select ng-model="files" id="exampleInputFile">
    <p class="help-block">Ensure correct format</p>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

</form>